<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Overlay to Improve Contrast -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" /> <!-- Black background for contrast -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- White Border on Top -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- White inner background -->
            <stroke android:width="3dp" android:color="@android:color/darker_gray"/> <!-- Gray border -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>

</layer-list>